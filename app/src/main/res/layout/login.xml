<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2880B9"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Welcome back to"
        android:id="@+id/textView9"
        android:textSize="@dimen/_20sdp"
        android:textColor="#ecf0f1"
        android:background="#2980b9"
        android:layout_marginTop="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Project Green"
        android:id="@+id/textView8"
        android:textSize="@dimen/_45sdp"
        android:textColor="#ecf0f1"
        android:background="#2980b9"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:id="@+id/putUsername"
        android:layout_gravity="center_horizontal"
        android:hint="Username"
        android:background="@mipmap/recycling_edittext"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/_5sdp" />

    <EditText
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/putPassword"
        android:layout_gravity="center_horizontal"
        android:hint="Password"
        android:background="@mipmap/recycling_edittext"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/_5sdp" />

    <Button
        android:layout_width="222dp"
        android:layout_height="88dp"
        android:id="@+id/signIn"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/recycling_sign_in"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/putPassword"
        android:layout_centerHorizontal="true" />
</RelativeLayout>