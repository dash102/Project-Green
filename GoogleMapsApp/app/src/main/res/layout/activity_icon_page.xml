<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mhs.team.googlemapsapp.Recycle"
    android:id="@+id/activity_icon_page"
    android:background="#2980b9">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        </LinearLayout>
</LinearLayout>

    <ImageButton
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:id="@+id/paperButton"
        android:background="@mipmap/flatpaper"
        android:layout_alignTop="@+id/plasticButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:id="@+id/plasticButton"
        android:background="@mipmap/flatplastic"
        android:layout_above="@+id/metalButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="49dp" />

    <ImageButton
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:id="@+id/metalButton"
        android:background="@mipmap/flatmetal"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:id="@+id/woodButton"
        android:background="@mipmap/flatwood"
        android:layout_alignTop="@+id/glassButton"
        android:layout_alignLeft="@+id/metalButton"
        android:layout_alignStart="@+id/metalButton" />

    <ImageButton
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:id="@+id/glassButton"
        android:background="@mipmap/flatglass"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp" />

    <ImageButton
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:id="@+id/cardboardButton"
        android:background="@mipmap/flatcardboard"
        android:layout_alignTop="@+id/metalButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose a Material"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:textColor="#ecf0f1"
        android:textSize="30dp" />

</RelativeLayout>
