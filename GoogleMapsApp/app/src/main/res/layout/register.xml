<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2880B9"
    android:weightSum="1"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView16"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="222dp"
        android:layout_height="88dp"
        android:id="@+id/toSignIn"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/recycling_sign_in" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView10"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don&apos;t have an account?"
        android:id="@+id/noAccountText"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/_30sdp"
        android:allowUndo="true"
        android:background="#2980b9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView12"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:id="@+id/setUsername"
        android:layout_gravity="center_horizontal"
        android:hint=" Username"
        android:background="@mipmap/recycling_edittext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView13"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/setPassword"
        android:layout_gravity="center_horizontal"
        android:hint=" Password"
        android:background="@mipmap/recycling_edittext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView14"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/setEmail"
        android:layout_gravity="center_horizontal"
        android:hint=" E-mail"
        android:background="@mipmap/recycling_edittext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView15"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="222dp"
        android:layout_height="88dp"
        android:id="@+id/register"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/recycle_register" />
</LinearLayout>